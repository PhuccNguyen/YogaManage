<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/white">

  <!-- Profile Header with Background Image -->
  <RelativeLayout
      android:id="@+id/profileHeader"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:background="@drawable/background_image"
      android:elevation="4dp" />

  <!-- Profile Image Container -->
  <RelativeLayout
      android:id="@+id/profileImageContainer"
      android:layout_width="140dp"
      android:layout_height="140dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="140dp"
      android:background="@drawable/circle_border"
      android:elevation="6dp">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        android:contentDescription="Profile Picture" />

    <!-- Camera Icon for Editing Profile Image -->
    <ImageView
        android:id="@+id/editProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="@drawable/circle_background"
        android:src="@drawable/ic_camera"
        android:contentDescription="Edit Profile Picture" />
  </RelativeLayout>

  <!-- User Full Name -->
  <TextView
      android:id="@+id/fullName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/profileImageContainer"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="16dp"
      android:text="Lại Là Tôi Đây"
      android:textSize="22sp"
      android:textStyle="bold"
      android:textColor="@color/darkBlue" />

  <!-- User Email -->
  <TextView
      android:id="@+id/email"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/fullName"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="4dp"
      android:text="Email Address"
      android:textSize="14sp"
      android:textColor="@color/mediumGray" />

  <!-- User Details Section -->
  <LinearLayout
      android:id="@+id/userDetailsContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/email"
      android:layout_marginTop="16dp"
      android:layout_marginHorizontal="16dp"
      android:orientation="vertical"
      android:background="@color/softBlue"
      android:padding="16dp"
      android:elevation="4dp">

    <!-- Phone -->
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: +123456789"
        android:textSize="16sp"
        android:textColor="@color/darkBlue"
        android:layout_marginBottom="8dp" />

    <!-- Location -->
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: City, Country"
        android:textSize="16sp"
        android:textColor="@color/darkBlue" />
  </LinearLayout>

  <!-- Button Row: Edit Profile and Manage Yoga -->
  <LinearLayout
      android:id="@+id/buttonRow"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/userDetailsContainer"
      android:layout_marginTop="20dp"
      android:layout_marginHorizontal="16dp"
      android:orientation="horizontal"
      android:weightSum="2">

    <!-- Edit Profile Button -->
    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/mediumBlue"
        android:textColor="@android:color/white"
        android:text="Edit Profile"
        android:textStyle="bold" />

    <!-- Manage Yoga Button -->
    <Button
        android:id="@+id/manageYogaButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:text="Manage Yoga"
        android:backgroundTint="@color/mediumBlue"
        android:textColor="@android:color/white"
        android:textStyle="bold" />



  </LinearLayout>

  <!-- Logout Button -->
  <Button
      android:id="@+id/logoutButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/buttonRow"
      android:layout_marginTop="20dp"
      android:layout_marginHorizontal="16dp"
      android:backgroundTint="@color/mediumBlue"
      android:textColor="@android:color/white"
      android:text="Logout"
      android:textStyle="bold" />

  <!-- Bottom Navigation -->
  <LinearLayout
      android:id="@+id/bottomNavigationContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal"
      android:background="@color/lightGray"
      android:elevation="4dp"
      android:gravity="center">

    <!-- Home Button -->
    <LinearLayout
        android:id="@+id/homeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/mediumGreen"
        android:elevation="4dp">

      <ImageView
          android:layout_width="34dp"
          android:layout_height="34dp"
          android:contentDescription="Home Icon"
          android:src="@drawable/home" />
    </LinearLayout>

    <!-- Profile Button -->
    <LinearLayout
        android:id="@+id/profileButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/mediumBlue"
        android:elevation="4dp">

      <ImageView
          android:layout_width="34dp"
          android:layout_height="34dp"
          android:contentDescription="Profile Icon"
          android:src="@drawable/user" />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>
