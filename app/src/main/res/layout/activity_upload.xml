<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewUpload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- CardView Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/textTitleUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Yoga Course"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <!-- Image Upload -->
                <ImageView
                    android:id="@+id/uploadImage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/export"
                    android:contentDescription="Upload Yoga Course Image"
                    android:background="@drawable/border_dashed"
                    android:padding="16dp" />

                <!-- Day Picker -->
                <TextView
                    android:id="@+id/dayOfWeek"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/border_solid"
                    android:gravity="center_vertical|start"
                    android:paddingStart="12dp"
                    android:text="Select Day(s) of the Week"
                    android:textColor="@color/darkBlue"
                    android:hint="Select Day(s)"
                    android:textColorHint="@color/darkBlue"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Time Picker -->
                <TextView
                    android:id="@+id/timeOfCourse"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/border_solid"
                    android:gravity="center_vertical|start"
                    android:paddingStart="12dp"
                    android:text="Select Time"
                    android:textColor="@color/darkBlue"
                    android:hint="Select Time"
                    android:textColorHint="@color/lavender"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Capacity -->
                <EditText
                    android:id="@+id/capacity"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/border_solid"
                    android:hint="Enter Capacity"
                    android:inputType="number"
                    android:paddingStart="12dp"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/darkBlue" />

                <!-- Duration -->
                <EditText
                    android:id="@+id/duration"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/border_solid"
                    android:hint="Enter Duration (minutes)"
                    android:inputType="number"
                    android:paddingStart="12dp"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/darkBlue" />

                <!-- Price -->
                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/border_solid"
                    android:hint="Enter Price"
                    android:inputType="numberDecimal"
                    android:paddingStart="12dp"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/darkBlue" />

                <!-- Type -->
                <EditText
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/border_solid"
                    android:hint="Enter Type (e.g., Hatha, Vinyasa)"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/darkBlue" />

                <!-- Description -->
                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/border_solid"
                    android:gravity="top|start"
                    android:hint="Enter Description"
                    android:inputType="textMultiLine"
                    android:paddingStart="12dp"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/darkBlue" />

                <!-- Save Button -->
                <Button
                    android:id="@+id/saveYogaCourseButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/mediumBlue"
                    android:text="Save Yoga Course"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:elevation="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
